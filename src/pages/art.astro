<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Art & Graphics | Strixly</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Poppins:wght@700&family=Nothing+You+Could+Do&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css" />
    <style>
      :root {
        --main-bg: #000000;
        --main-bg2: #1a1027;
        --accent-main: #E07BE0;
        --accent-dark: #392F5A;
        --text-main: #E2E2E2;
        --glow-main: #E07BE0;
      }
      body {
        background: linear-gradient(160deg, var(--main-bg) 0%, var(--main-bg2) 100%);
        color: var(--text-main);
        font-family: 'Inter', Arial, sans-serif;
        margin:0; padding:0;
        min-height:100vh;
        overflow-x: hidden;
      }
      /* Nav bar styles (use same from about/home) */
      .main-nav {
        position: sticky; top: 0;
        width: 100%;
        z-index: 100;
        background: var(--main-bg);
        border-bottom: 2.5px solid var(--accent-dark);
        box-shadow: 0 1px 12px 0 #0008;
        padding: 0;
        margin-bottom:3em;
        transition: background 0.7s, border-color 0.4s;
      }
      .nav-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 880px;
        padding: 0.12em 2em 0.3em 2em;
        margin: 0 auto;
      }
      .nav-brand {
        font-family: 'Nothing You Could Do', cursive;
        color: var(--accent-main);
        font-size: 2.28em;
        letter-spacing: 0.05em;
        line-height: 1;
        user-select: none;
        margin-right: 2.5em;
        display:inline-block;
        transition: color 0.5s;
      }
      .nav-links {
        list-style: none;
        display: flex;
        gap: 2em;
        margin: 0; padding: 0;
      }
      .nav-link {
        color: var(--text-main);
        font-size: 1.12em;
        text-decoration: none;
        font-family: 'Poppins',sans-serif;
        font-weight: 600;
        position: relative;
        transition: color 0.18s;
        padding: 0.15em 0;
      }
      .nav-link:hover,
      .nav-link.active {
        color: var(--accent-main);
      }
      @media (max-width:700px) {
        .nav-content { padding: 0.11em 1em 0.29em 1em;}
        .nav-brand{ font-size:1.2em;}
        .nav-links { gap: 1em;}
      }
      /* Glowing dots background (same as About/Home) */
      #all-dots-canvas {
        position: fixed;
        top:0; left:0; width:100vw; height:100vh;
        pointer-events: none;
        z-index:0;
        opacity: 0.38;
        transition: opacity .7s;
      }
      .gallery-container {
        max-width: 880px;
        margin: 3em auto 0 auto;
        padding: 2.2em 1.2em 3em 1.2em;
        background: #23202a;
        border-radius: 2em;
        box-shadow: 0 9px 30px #18102b44;
        border: 2px solid #E07BE0;
        position: relative;
        z-index: 1;
      }
      .section-title {
        color: #E07BE0;
        font-size: 2em;
        font-family: 'Poppins', 'Montserrat', Arial, sans-serif;
        margin: 1.8em 0 1em .0em;
        text-align:left;
      }
      .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill,minmax(210px,1fr));
        gap: 1.2em;
        margin-bottom: 2em;
      }
      .gallery figure {
        margin:0;
      }
      .gallery img {
        width: 100%;
        border-radius: 1em;
        box-shadow: 0 2px 22px #392F5A33;
        background: #181820;
        display:block;
      }
      .gallery figcaption {
        color: #E2E2E2;
        text-align: center;
        font-size: 1em;
        margin: .3em 0 0 0;
      }
      @media (max-width: 700px) {
        .gallery-container {padding:6vw 2vw;}
        .gallery {grid-template-columns:repeat(auto-fill,minmax(140px,1fr));}
      }
    </style>
  </head>
  <body>
    <nav class="main-nav">
      <div class="nav-content">
        <span class="nav-brand">Strixly</span>
        <ul class="nav-links">
          <li><a href="/" class="nav-link">Home</a></li>
          <li><a href="/about" class="nav-link">About</a></li>
          <li><a href="/art" class="nav-link active">Art & Graphics</a></li>
          <li><a href="/photo" class="nav-link">Photography</a></li>
          <li><a href="/video" class="nav-link">Videography</a></li>
        </ul>
      </div>
    </nav>
    <canvas id="all-dots-canvas"></canvas>
    <div class="gallery-container">
      <h1 class="section-title">Art & Graphics Gallery</h1>
      <div class="gallery" id="cloudinary-gallery"></div>
    </div>
    <script>
      // Glowing dots background (same as About/Home)
      const canvas = document.getElementById("all-dots-canvas");
      const ctx = canvas.getContext("2d");
      const colorNormal = ["#E07BE0","#392F5A"];
      let w = window.innerWidth, h = window.innerHeight;
      let dots = [];
      function resizeDots() {
        w = window.innerWidth; h = window.innerHeight;
        canvas.width = w; canvas.height = h;
      }
      window.addEventListener("resize", resizeDots);
      function spawnDots() {
        dots = [];
        let totalDots = Math.floor(w*h/7000);
        for(let i=0;i<totalDots;++i) {
          const x = Math.random() * w, y = Math.random() * h;
          const delay = Math.random()*7.5;
          const size = Math.random()*17+9;
          const life = (Math.random()*6)+4;
          dots.push({
            x,y,size,
            color: colorNormal[Math.floor(Math.random()*colorNormal.length)],
            t: Math.random()*10,
            life, delay
          });
        }
      }
      function animateDots() {
        ctx.clearRect(0,0,w,h);
        let tm = Date.now()/1000;
        for(const dot of dots) {
          let localTime = (tm+dot.delay+dot.t)%dot.life;
          let alpha =
            localTime < 0.3 ? localTime/0.3
            : localTime > dot.life-0.3 ? 1-(localTime-(dot.life-0.3))/0.3
            : 1;
          ctx.beginPath(); ctx.arc(dot.x,dot.y,dot.size,0,Math.PI*2);
          ctx.fillStyle = dot.color.replace(')', `,${0.22*alpha})`).replace('rgb(', 'rgba(');
          ctx.globalAlpha = 0.32*alpha;
          ctx.shadowColor = dot.color;
          ctx.shadowBlur = 6;
          ctx.fill();
          ctx.globalAlpha=1;
          ctx.shadowBlur = 0;
        }
        requestAnimationFrame(animateDots);
      }
      resizeDots();
      spawnDots();
      animateDots();
      window.addEventListener("resize", ()=>{
        resizeDots(); spawnDots();
      });

      // Cloudinary automated gallery
      fetch("https://res.cloudinary.com/dz747ahq9/image/list/Art.json")
        .then(r=>r.ok?r.json():Promise.reject("No images found"))
        .then(data=>{
          const gallery = document.getElementById("cloudinary-gallery");
          if (!gallery) return;
          data.resources.forEach(asset => {
            let fig = document.createElement("figure");
            let img = document.createElement("img");
            img.src = `https://res.cloudinary.com/dz747ahq9/image/upload/${asset.public_id}.${asset.format}`;
            img.alt = asset.public_id.split('/').pop();
            fig.appendChild(img);
            let cap = document.createElement("figcaption");
            cap.textContent = img.alt;
            fig.appendChild(cap);
            gallery.appendChild(fig);
          });
        });
    </script>
  </body>
</html>

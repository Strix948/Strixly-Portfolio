    <style>
      :root {
        --main-bg: #000000;
        --accent-main: #E07BE0;
        --accent-dark: #392F5A;
        --text-main: #E2E2E2;
        --border-main: #E2E2E2;
        --glow-main: #E07BE0;
      }
      body {
        font-family: 'Open Sans', Arial, sans-serif;
        background: var(--main-bg);
        color: var(--text-main);
        margin: 0;
        padding: 0;
      }
      main {
        max-width: 750px;
        margin: 3em auto;
        background: var(--accent-dark);
        padding: 2.5em 2em 2em 2em;
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.18);
        border: 1.5px solid var(--border-main);
      }
      h1, h2, h3 {
        font-family: 'Montserrat', Arial, sans-serif;
        margin-bottom: 0.15em;
        letter-spacing: 0.01em;
      }
      h1 {
        color: var(--accent-main);
        font-size: 2.55rem;
        text-shadow: 1px 1px 6px var(--main-bg);
      }
      h2 {
        color: var(--glow-main);
        font-size: 1.38rem;
        margin-top: 1.28em;
      }
      h3 {
        color: var(--accent-main);
        font-size: 1.12rem;
        margin-top: 1.38em;
      }
      .divider {
        border: 0;
        height: 3px;
        width: 100%;
        margin: 2em 0 1.4em 0;
        background: linear-gradient(90deg, var(--accent-main) 0%, var(--accent-dark) 60%, var(--glow-main) 100%);
        border-radius: 99px;
        animation: moveGradient 2.5s linear infinite alternate;
      }
      @keyframes moveGradient {
        from {background-position: 0 0;}
        to {background-position: 100% 0;}
      }
      ul {
        padding-left: 1.45em;
        line-height: 1.7;
      }
      strong {
        color: var(--accent-main);
      }
      blockquote {
        border-left: 3px solid var(--accent-main);
        color: var(--text-main);
        padding-left: 1em;
        font-style: italic;
        margin: 1.4em 0;
        opacity: 0.86;
      }
      .pill-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.62em;
        margin: 0.8em 0 2.2em 0;
      }
      .pill {
        background: var(--main-bg);
        color: var(--text-main);
        border-radius: 99px;
        font-size: 1em;
        padding: 0.32em 1.1em;
        border: 1px solid var(--accent-main);
        opacity: 0.96;
      }
      .software-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.54em;
        margin: 1em 0 2em 0;
      }
      .software-pill {
        background: var(--main-bg);
        color: var(--accent-main);
        border-radius: 99px;
        font-size: 1em;
        padding: 0.27em 1em 0.27em .8em;
        border: 1px solid var(--accent-main);
        margin-bottom: 4px;
        opacity: 0.97;
        display: flex;
        align-items: center;
        gap: 0.5em;
      }
      .software-pill i {
        color: var(--glow-main) !important;
      }
      .social-btn {
        margin-bottom: 1em;
        display: flex;
        align-items: center;
        gap: 0.55em;
        font-size: 1.1em;
        padding: 0.5em 1.15em;
        background: linear-gradient(100deg, var(--accent-dark) 7%, var(--accent-main) 92%);
        color: var(--text-main) !important;
        border-radius: 7px;
        text-decoration: none !important;
        box-shadow: 0 1px 6px #0009;
        min-width: 120px;
        border: 1.5px solid var(--accent-main);
        text-align: center;
        transition: background 0.15s, transform 0.12s;
      }
      .social-btn i {
        font-size: 1.15em;
        color: var(--glow-main);
      }
      .social-btn:hover {
        background: linear-gradient(100deg, var(--accent-main) 20%, var(--glow-main) 95%);
        color: var(--accent-dark) !important;
        transform: scale(1.06);
      }
      .venom-btn {
        background: linear-gradient(90deg, var(--accent-main) 0%, var(--main-bg) 135%);
        color: var(--text-main);
        border-radius: 8px;
        padding: 0.62em 1.35em;
        text-decoration: none;
        font-weight: bold;
        display: inline-block;
        margin: 1em 0 1.7em 0;
        font-family: 'Montserrat', Arial, sans-serif;
        letter-spacing: 0.02em;
        box-shadow: 0 2px 8px #05050538;
        border: 1px solid var(--glow-main);
        transition: transform .15s, background 0.15s;
      }
      .venom-btn:hover {
        transform: scale(1.06);
        background: linear-gradient(90deg, var(--main-bg) 10%, var(--glow-main) 100%);
        color: var(--accent-dark);
      }
      .venom-btn i {
        margin-right: .5em;
        color: var(--glow-main);
      }
      .facts-list {
        line-height: 1.6;
        margin-bottom: 1.8em;
        color: var(--glow-main);
      }
      .facts-list li strong {
        color: var(--accent-main);
      }
    </style>
  </head>

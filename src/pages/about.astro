        background: linear-gradient(97deg,#fff700 26%,#1de9b6 59%,#fb5caa 88%,#3f51b5 99%);
        color:transparent;
        -webkit-background-clip: text;
        background-clip: text;
        animation: gradmove 5s linear infinite alternate;
        text-shadow: none;
      }
      @keyframes gradmove {
        0% {background-position: 0%;}
        100%{background-position: 100%;}
      }
      @keyframes rainbowbgmove {
        0% {background-position: 0%;}
        100%{background-position: 100%;}
      }
      body.rainbow-mode .signature {
        color: #fff;

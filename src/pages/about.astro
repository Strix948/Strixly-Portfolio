    <style>
      :root {
        --main-bg: #000000;
        --accent-main: #E07BE0;
        --accent-dark: #392F5A;
        --text-main: #E2E2E2;
        --border-main: #E2E2E2;
        --glow-main: #E07BE0;
      }
      body {
        font-family: 'Inter', Arial, sans-serif;
        background: var(--main-bg);
        color: var(--text-main);
        margin: 0;
        padding: 0;
        min-height: 100vh;
        position: relative;
        transition: background 0.3s;
      }
      .side-swirls {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        pointer-events: none;
        z-index: 0;
        display: flex;
        justify-content: space-between;
        align-items: stretch;
      }
      .swirl-svg {
        width: 100px;
        height: 100vh;
        opacity: 0.19;
        animation: swirl-fade 12s ease-in-out infinite alternate;
      }
      .swirl-svg.right {
        transform: scaleX(-1);
        animation-delay: 6s;
      }
      @keyframes swirl-fade {
        0% { opacity: 0.12; filter: blur(0); }
        25% { opacity: 0.26; filter: blur(2px);}
        50% { opacity: 0.19; filter: blur(0.8px);}
        75% { opacity: 0.24; filter: blur(1.2px);}
        100% { opacity: 0.13; filter: blur(0);}
      }
      main {
        max-width: 750px;
        margin: 3em auto;
        background: var(--accent-dark);
        padding: 2.5em 2em 2em 2em;
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.18);
        border: 1.5px solid var(--border-main);
        position: relative;
        z-index: 1;
      }
      h1, h2, h3 {
        font-family: 'Poppins', 'Montserrat', Arial, sans-serif;
        font-weight:700;
        letter-spacing: 0.03em;
        margin-bottom: 0.15em;
      }
      h1 {
        color: var(--accent-main);
        font-size: 2.55rem;
        text-shadow: 1px 1px 6px var(--main-bg);
      }
      h2 {
        color: var(--glow-main);
        font-size: 1.38rem;
        margin-top: 1.28em;
      }
      h3 {
        color: var(--accent-main);
        font-size: 1.12rem;
        margin-top: 1.38em;
      }
      blockquote, .disclaimer {
        font-family: 'Fira Mono', 'Menlo', 'Monaco', monospace;
      }
      .disclaimer {
        background: #1a1027;
        color: #E07BE0;
        border-left: 4px solid #E07BE0;
        border-radius: 5px;
        padding: 0.7em 1em;
        margin: 1.8em 0 1.2em 0;
        font-size: 1.09em;
        display: flex;
        align-items: center;
        font-family: 'Fira Mono',monospace;
        max-width: 670px;
      }
      .disclaimer strong {margin-right:.45em;}
      .disclaimer i {
        margin-right: .7em;
        color: #E07BE0;
        font-size: 1.25em;
      }
      /* Animated swirl-style divider, matches side swirls */
      .divider {
        border: 0;
        height: 8px;
        width: 100%;
        margin: 2em 0 1.4em 0;
        background: repeating-linear-gradient(
          90deg,
          var(--accent-main) 0 40px,
          var(--accent-dark) 40px 80px
        );
        border-radius: 10px;
        filter: blur(.2px);
        animation: dividerwave 6s ease-in-out infinite alternate;
      }
      @keyframes dividerwave {
        0% { filter: blur(.8px) brightness(0.93);}
        40% { filter: blur(1.7px) brightness(1.1);}
        50% { filter: blur(.5px) brightness(0.97);}
        80% { filter: blur(1px) brightness(1);}
        100% { filter: blur(.8px) brightness(1.08);}
      }
      ul {
        padding-left: 1.45em;
        line-height: 1.7;
      }
      strong {
        color: var(--accent-main);
      }
      blockquote {
        border-left: 3px solid var(--accent-main);
        color: var(--text-main);
        padding-left: 1em;
        font-style: italic;
        margin: 1.4em 0;
        opacity: 0.86;
      }
      /* Improved software grid layout */
      .software-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(180px,1fr));
        gap: 1em 1.25em;
        margin: 1.5em 0 2.2em 0;
        padding:0;
        list-style-type: none;
      }
      .software-card {
        background: var(--main-bg);
        color: var(--accent-main);
        border-radius: 15px;
        font-size: 1.05em;
        padding: 0.55em 1em 0.48em 1em;
        border: 1.5px solid var(--accent-main);
        display: flex;
        align-items: center;
        gap: 0.7em;
        font-weight: bold;
        box-shadow: 0 1.5px 10px #0006;
      }
      .software-card i { color: var(--glow-main); font-size:1.25em;}
      .social-btn, .venom-social {
        border-radius: 0 !important;
        margin-bottom: 1em;
        display: flex;
        align-items: center;
        gap: 0.55em;
        font-size: 1.1em;
        padding: 0.5em 1.15em;
        background: linear-gradient(100deg, var(--accent-dark) 7%, var(--accent-main) 92%);
        color: var(--text-main) !important;
        text-decoration: none !important;
        box-shadow: 0 1px 6px #0009;
        min-width: 120px;
        border: 1.5px solid var(--accent-main);
        text-align: center;
        justify-content: center;
        transition: background 0.15s, transform 0.12s;
        font-weight: bold;
      }
      .social-btn i, .venom-social i {
        font-size: 1.15em;
        color: var(--glow-main);
        margin-right: .5em;
        display: inline-block;
        width:1.5em;
        text-align:center;
      }
      .social-btn:hover, .venom-social:hover {
        background: linear-gradient(100deg, var(--accent-main) 20%, var(--glow-main) 95%);
        color: var(--accent-dark) !important;
        transform: scale(1.06);
      }
      .facts-list {
        line-height: 1.6;
        margin-bottom: 1.8em;
        color: var(--glow-main);
      }
      .facts-list li strong {
        color: var(--accent-main);
      }
      .signature {
        font-family: 'Nothing You Could Do', cursive;
        color: var(--accent-main);
        font-size: 2.7em;
        text-align: right;
        display: block;
        margin-top: 2.8em;
        margin-bottom: 0.5em;
        letter-spacing: .06em;
        line-height:1.08;
        user-select: none;
        text-shadow: 0 1px 10px #0007;
        opacity: 1;
        padding-right: .5em;
        cursor: pointer;
        transition: color 0.4s, text-shadow 0.4s;
      }
      body.rainbow-mode {
        --main-bg: #1a1937;
        --text-main: #fff;
        --accent-main: #fb5caa;
        --accent-dark: #6555e3;
        --glow-main: #fbf35c;
        background: linear-gradient(120deg, #fb5caa 0%, #fbf35c 40%, #66e8dc 80%, #6555e3 100%);
        background-size: 350% 350%;
        animation: rainbowbgmove 7s linear infinite alternate;
      }
      /* Rainbow mode animated for accent and divider lines as well */
      @keyframes rainbowbgmove {
        0% {background-position: 100% 0%;}

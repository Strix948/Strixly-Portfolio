      /* Rainbow Mode Styling */
      body.rainbow-mode {
        --accent-main: #fb5caa;
        --accent-dark: #007cf0;
        --glow-main: #ffe500;
        --text-main: #fff;
        background: linear-gradient(129deg, #fb5caa 5%, #fff700 30%, #39ff14 60%, #1de9b6 80%, #3f51b5 98%, #f06292 100%);

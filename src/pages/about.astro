      :root {
        --main-bg: #000000;
        --accent-main: #E07BE0;
        --accent-dark: #392F5A;
        --text-main: #E2E2E2;
        --border-main: #E2E2E2;
        --glow-main: #E07BE0;
      }
      body {
        font-family: 'Inter', Arial, sans-serif;
        background: var(--main-bg);
        color: var(--text-main);
        margin: 0;
        padding: 0;
        min-height: 100vh;
        position: relative;
        transition: background 0.3s;
      }
      /* Animated Side Dots/Blobs */
      .side-blobs {
        pointer-events: none;
        position: fixed;
        top: 0; left: 0;
        width: 100vw; height: 100vh;
        z-index: 0;
        display: flex; justify-content: space-between;
      }
      .blobs {
        display: flex;
        flex-direction: column;
        height: 100vh;
        justify-content: space-between;
        align-items: center;
        width: 88px;
      }
      .blob {
        width: 22px;
        height: 22px;
        border-radius: 50%;
        background: var(--accent-main);
        opacity: 0.18;
        margin: 26px 0;
        animation: blobfade 4s linear infinite;
        filter: blur(0.5px);
      }
      .blobs.right .blob {
        background: var(--accent-dark);
      }
      .blob:nth-child(1) { animation-delay: 0.3s;}
      .blob:nth-child(2) { animation-delay: 1.7s;}
      .blob:nth-child(3) { animation-delay: 0.9s;}
      .blob:nth-child(4) { animation-delay: 2.2s;}
      .blob:nth-child(5) { animation-delay: 0.7s;}
      @keyframes blobfade {
        0%,100% { opacity: 0.19; }
        25% { opacity: 0.38; }
        50% { opacity: 0.09; }
        75% { opacity: 0.31; }
      }
      main {
        max-width: 750px;
        margin: 3em auto;
        background: var(--accent-dark);
        padding: 2.5em 2em 2em 2em;
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.18);
        border: 1.5px solid var(--border-main);
        position: relative;
        z-index: 1;
      }
      h1, h2, h3 {
        font-family: 'Poppins', 'Montserrat', Arial, sans-serif;
        font-weight: 700;
        letter-spacing: 0.03em;
        margin-bottom: 0.15em;
      }
      h1 {
        color: var(--accent-main);
        font-size: 2.55rem;
        text-shadow: 1px 1px 6px var(--main-bg);
        transition: color .5s;
      }
      h2 {
        color: var(--glow-main);
        font-size: 1.38rem;
        margin-top: 1.28em;
        transition: color .5s;
      }
      h3 {
        color: var(--accent-main);
        font-size: 1.12rem;
        margin-top: 1.38em;
        transition: color .5s;
      }
      blockquote, .disclaimer-info {
        font-family: 'Fira Mono', 'Menlo', 'Monaco', monospace;
      }
      .simple-divider {
        width: 100%;
        height: 2.5px;
        background: var(--accent-main);
        border: 0;
        border-radius: 2px;
        margin: 2em 0 1.4em 0;
